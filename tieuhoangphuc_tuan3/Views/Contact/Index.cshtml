@model WebBanDienThoai.Models.Contact

@{
    ViewData["Title"] = "Liên hệ";
}
<div class="container mt-4 mb-5">
    <h2 class="mb-3 fw-bold text-warning"><i class="bi bi-envelope-paper"></i> Liên hệ với Shop Điện Thoại</h2>
    <p>
        Nếu bạn có bất kỳ câu hỏi, phản hồi hoặc cần hỗ trợ, hãy liên hệ với chúng tôi qua các kênh dưới đây hoặc gửi thông tin qua form. Shop Điện Thoại luôn sẵn sàng hỗ trợ bạn!
    </p>
    <div class="row g-4">
        <!-- Thông tin liên hệ -->
        <div class="col-md-5">
            <div class="bg-light rounded p-4 shadow-sm mb-4">
                <h5 class="fw-semibold mb-3"><i class="bi bi-telephone-inbound"></i> Thông tin liên hệ</h5>
                <ul class="list-unstyled mb-2">
                    <li class="mb-2">
                        <i class="bi bi-geo-alt-fill text-danger"></i>
                        <strong>Địa chỉ:</strong> Song Hành Xa Lộ Hà Nội, Thủ Đức, Hồ Chí Minh
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-telephone text-primary"></i>
                        <strong>Hotline:</strong> <a href="tel:18001008">1800 1008</a> (miễn phí)
                    </li>
                    <li class="mb-2">
                        <i class="bi bi-envelope text-success"></i>
                        <strong>Email:</strong> <a href="mailto:tranbinhhoa999@gmail.com">info@shopdienthoai.vn</a>
                    </li>
                    <li>
                        <i class="bi bi-globe2 text-info"></i>
                        <strong>Website:</strong> <a href="https://localhost:7105/" target="_blank">shopdienthoai.vn</a>
                    </li>
                </ul>
                <div class="mb-2">
                    <a href="https://www.facebook.com/FPTShopOnline" target="_blank" class="me-3"><i class="fab fa-facebook fa-lg"></i></a>
                    <a href="https://www.tiktok.com/@@fptshop.official" target="_blank" class="me-3"><i class="fab fa-tiktok fa-lg"></i></a>
                    <a href="https://www.youtube.com/@@FPTShop_" target="_blank"><i class="fab fa-youtube fa-lg"></i></a>
                </div>
            </div>
            <!-- Google Maps -->
            <div class="rounded overflow-hidden shadow-sm">
                <iframe src="https://www.google.com/maps?q=+Song+Hành+Xa+Lộ+Hà+Nội,+Thủ+Đức,+Hồ+Chí+Minh&output=embed"
                        width="100%" height="210" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>
        <!-- Form liên hệ -->
        <div class="col-md-7">
            <div class="card shadow-sm p-4">
                <h5 class="mb-3 fw-semibold text-primary"><i class="bi bi-chat-dots"></i> Gửi liên hệ, góp ý hoặc yêu cầu hỗ trợ</h5>

                @if (ViewBag.Success != null)
                {
                    <div class="alert alert-success">@ViewBag.Success</div>
                }
                @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
                {
                    <div class="alert alert-danger">
                        Vui lòng kiểm tra lại các trường dữ liệu và thử lại.
                    </div>
                }

                <form asp-action="Index" method="post" novalidate>
                    @Html.AntiForgeryToken()
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" required />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" required type="email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="Phone" class="form-label"></label>
                            <input asp-for="Phone" class="form-control" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="Message" class="form-label"></label>
                            <textarea asp-for="Message" class="form-control" rows="5" required></textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                        <div class="col-12 d-flex justify-content-end">
                            <button type="submit" class="btn btn-warning px-4 fw-semibold">
                                <i class="bi bi-send"></i> Gửi liên hệ
                            </button>
                        </div>
                    </div>
                </form>
                <div class="form-text mt-2">
                    <i class="bi bi-shield-lock"></i> Thông tin của bạn sẽ được bảo mật và chỉ sử dụng để liên hệ hỗ trợ.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script>
    window.onload = function() {
            var adBanner = document.querySelector('.carousel');
            if (adBanner) {
                adBanner.style.display = 'none';
            }
        };
</script>