@model WebBanDienThoai.Models.SubCategory
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Thêm danh mục hãng";
    var categories = ViewBag.Categories as List<WebBanDienThoai.Models.Category>;
}
@if (ViewBag.Errors != null)
{
    <ul>
        @foreach (var err in ViewBag.Errors)
        {
            <li>@err.ErrorMessage</li>
        }
    </ul>
}

<h2>@ViewData["Title"]</h2>
<form asp-action="@(ViewContext.RouteData.Values["action"])" method="post">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="mb-3">
        <label>Tên hãng</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label>Thuộc danh mục</label>
        <select asp-for="CategoryId" class="form-select" asp-items="@(new SelectList(categories, "Id", "Name"))">
            <option value="">--Chọn danh mục--</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <button class="btn btn-primary" type="submit">Lưu</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Quay lại</a>
</form>
