@model WebBanDienThoai.Models.ApplicationUser

@{
    ViewData["Title"] = "Thêm người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4 text-success"><i class="fas fa-user-plus"></i> Thêm người dùng mới</h2>

<form asp-action="Add" method="post">
    <div class="form-group mb-3">
        <label asp-for="FullName">Họ và tên</label>
        <input asp-for="FullName" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" type="email" required />
    </div>

    <div class="form-group mb-3">
        <label>Mật khẩu</label>
        <input type="password" name="password" class="form-control" required />
    </div>

    <div class="form-group mb-3">
        <label>Quyền</label>
        <select name="selectedRole" class="form-select" required>
            <option disabled selected>-- Chọn quyền --</option>
            @foreach (var role in ViewBag.Roles as List<string>)
            {
                <option value="@role">@role</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Lưu</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại</a>
</form>
