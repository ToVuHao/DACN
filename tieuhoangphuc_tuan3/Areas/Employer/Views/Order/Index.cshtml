@model IEnumerable<WebBanDienThoai.Models.Order>
@using WebBanDienThoai.Extensions

@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "~/Areas/Employer/Views/Shared/_EmployerLayout.cshtml";
    Func<WebBanDienThoai.Models.OrderStatus, string> badgeClass = status =>
        status switch
        {
            WebBanDienThoai.Models.OrderStatus.ChoXacNhan => "badge bg-warning text-dark",
            WebBanDienThoai.Models.OrderStatus.DangXuLy => "badge bg-info text-dark",
            WebBanDienThoai.Models.OrderStatus.DangGiao => "badge bg-primary",
            WebBanDienThoai.Models.OrderStatus.DaGiao => "badge bg-success",
            WebBanDienThoai.Models.OrderStatus.DaHuy => "badge bg-danger",
            WebBanDienThoai.Models.OrderStatus.TraHang => "badge bg-dark",
            WebBanDienThoai.Models.OrderStatus.HoanTat => "badge bg-secondary",
            _ => "badge bg-secondary"
        };
}

<div class="card shadow rounded-4 mb-4 border-0">
    <div class="card-body pb-1">
        <h3 class="mb-3"><i class="bi bi-clipboard-data me-2"></i>Quản lý đơn hàng</h3>
        <form method="get" class="row g-2 align-items-end mb-2">
            <div class="col-md-4 col-sm-6">
                <input type="text" name="search" class="form-control rounded-3"
                       placeholder="Tìm mã/tên khách..." value="@Context.Request.Query["search"]" />
            </div>
            <div class="col-md-3 col-sm-6">
                <select name="status" class="form-select rounded-3">
                    <option value="">Tất cả trạng thái</option>
                    @foreach (var s in Enum.GetValues(typeof(WebBanDienThoai.Models.OrderStatus)))
                    {
                        var value = (int)s;
                        bool isSelected = Context.Request.Query["status"] == value.ToString();
                        <option value="@value" selected="@(isSelected ? "selected" : null)">
                            @(((WebBanDienThoai.Models.OrderStatus)s).ToVietnameseStatus())
                        </option>
                    }
                </select>
            </div>
            <div class="col-md-2 col-6">
                <button type="submit" class="btn btn-primary w-100 rounded-3"><i class="bi bi-search"></i> Lọc</button>
            </div>
        </form>
    </div>
</div>

<div class="card shadow rounded-4 border-0">
    <div class="card-body p-0">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th class="text-center">ID</th>
                    <th>Khách hàng</th>
                    <th>Ngày đặt</th>
                    <th>Trạng thái</th>
                    <th>Tổng tiền</th>
                    <th class="text-center"></th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="6" class="text-center text-muted py-5">
                            <i class="bi bi-emoji-frown" style="font-size:2rem"></i> Không tìm thấy đơn hàng nào.
                        </td>
                    </tr>
                }
                else
                {
                    foreach (var o in Model)
                    {
                        <tr>
                            <td class="text-center fw-bold">#@o.Id</td>
                            <td>@o.ApplicationUser?.FullName</td>
                            <td>@o.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <span class="@badgeClass(o.Status) px-3 py-2">
                                    @o.Status.ToVietnameseStatus()
                                </span>
                            </td>
                            <td>@o.TotalPrice.ToString("N0") VNĐ</td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@o.Id"
                                   class="btn btn-outline-primary btn-sm rounded-pill px-3 shadow-sm" title="Xem chi tiết">
                                    <i class="bi bi-eye"></i>
                                    <span class="d-none d-md-inline"> Xem</span>
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
